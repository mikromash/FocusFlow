<ContentDialog x:ConnectionId='1'
    x:Class="Focus.Flow.UWP.AddTaskDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Додати нову задачу"
    PrimaryButtonText="Додати"
    SecondaryButtonText="Відміна"
                                                         
                                                             >

    <StackPanel Padding="20" Spacing="10">

        <TextBlock Text="Назва:"/>
        <TextBox x:ConnectionId='2' x:Name="TitleTextBox" PlaceholderText="Введіть назву задачі" />
        <TextBlock Text="Пріоритет:"/>
        <ComboBox x:ConnectionId='3' x:Name="PriorityComboBox" SelectedIndex="1">
            <ComboBoxItem Tag="Low">Низький</ComboBoxItem>
            <ComboBoxItem Tag="Medium">Середній</ComboBoxItem>
            <ComboBoxItem Tag="High">Високий</ComboBoxItem>
        </ComboBox>

    </StackPanel>

</ContentDialog>

